@model IEnumerable<ProyectoTiempos.Models.Apuesta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre del Sorteo
        </th>
        <th>
            Cliente
        </th>
        <th>
            Monto Total Apuesta
        </th>
        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sorteo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoApuesta)
            </td>
            <td>
                <a class="btn btn-sucess"><span class="glyphicon glyphicon-tasks" aria-hidden="true" title="Muestra Detalle de la Apuesta"></span></a>
            </td>

        </tr>

    }

</table>