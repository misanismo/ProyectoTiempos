@using System.Linq
@model ProyectoTiempos.Models.DetalleApuestaViewModelModal
@*Tabla para insertar las apuestas detalladas*@

<table id="TableListDetalesEntity" class="table table-striped table-bordered table-condensed"
       style="font-size: small">
    <thead>
    <tr>
        <th>Numero</th>
        <th>Monto Apuesta</th>
        
    </tr>
    </thead>

    @if (Model != null)
    {
       
        <tbody>

          @*Se recorre el foreach insertando los datos a la tabla*@

        @foreach (var item in Model.Detalles)
        {
         <tr >
                <td style="text-align: center">
                    @Model.Numeros.Where(a=>a.IdNumero == item.IdNumeros).FirstOrDefault().Numeros
                </td>
                <td style="text-align: center">
                    @item.Monto
                </td>
          </tr>
        }
        <tr>
            
            <td style="text-align: right">
                <b>Total Monto:</b>
            </td>
            <td style="text-align: right">
                <b>@Model.Detalles.Sum(d => d.Monto)</b>
            </td>
        </tr>




        </tbody>
                    }
</table>
