@model IEnumerable<ProyectoTiempos.Models.NumeroGanador>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Numero Ganador", "Create", new { controller = "NumerosGanadores" }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero.Numeros)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sorteo.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Premio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero.Numeros)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sorteo.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdPremio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdNumeroGanador }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.IdNumeroGanador }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.IdNumeroGanador }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
